#!/bin/bash

##------------------------ Parse the option switches
if [ $# != 0 ]; then
	if [ "$1" == "-f" ]; then
		if [ -d $2 ]; then
			FOLDER=$2
		else
			echo "Folder does not exists"
			exit
		fi
	else
		echo "Error"
		exit
	fi
else
	FOLDER=./tasks
fi

##------------------------ Find the number of days in current month
first=1
last=$( date -d "`date -d "next month" +%m/01/%Y` yesterday" +%d )

##------------------------ Write Task into file
function write()
{
	if [ "$text" == "" ]; then 
		echo "Nothing to write"
	else
		echo "$text" >> $fil
	fi
}

##------------------------ Delete a Task
function Delete()
{
	ans=$(echo -e "NO\nYES" | dmenu -p "Do you want to delete the task? ")
	if [ $ans == "YES" ]; then
		sed -i "/$text/d" $fil
		if [ "`cat $fil`" == "" ]; then
			rm $fil
		fi
	#else
		#echo "Not Deleted"
	fi
}


##------------------------ Main logic of the program
while true
do
day=$(for i in $(seq $last)
do
	echo $i
done | dmenu -p `date +%B_%Y`)

if [ -z $day ] 
then
	exit
else
	if (( $day<$first || $day>$last))
	then
		echo "Wrong Date - "$day
	else
		fil=$FOLDER/`date +%B_%Y`_$day
		#echo "File is "$fil
		if [ -e $fil ]
		then
			text=$(cat $fil | sort -n | dmenu )
			if [ "$text" != "" ]; then
				grep "$text" $fil > /dev/null
				if (($? != "0"))
				then
					write
				else
					Delete
				fi
			fi
		else
			text=$(echo "" | sort -n | dmenu )
			write
		fi
	fi
fi
done
